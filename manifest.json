{
  "manifest_version": 2,

  "name": "Text Splitter",
  "description": "This extension will split the selected text using delimiter",
  "version": "1.0",

  "browser_action": {
   "default_popup": "index.html",
   "default_icon" : "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
    
  },
  "permissions": [
    "activeTab",
    "storage"
   ]
}
